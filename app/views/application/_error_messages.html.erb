<% if object && object.errors.size > 0 %>
    <div style="color: red">
        <h2 style="background-color: yellow"> <%= pluralize(object.errors.size, "error") %> prohibited this record from being saved.</h2>
        <p>There were problems with the following fields:</p>
        <ul>
            <% object.errors.full_messages.each do |msg| %>
                <li> <%= msg %> </li>
            <% end %>
        </ul>
    </div>
<% end %>
<% if !flash[:notice].blank? %>
    <div class="notice">
        <%= flash[:notice] %>
    </div>
<% end %>

<h1>Subjects#index</h1>

<%= link_to("Add new Subject", new_subject_path, :class => 'action new')%>
<table class="listing">
    <tr class="header">
        <th>#</th>
        <th>Subject</th>
        <th>Visible</th>
        <th>Pages</th>
        <th>Actions</th>
    </tr>
    <% @subjects.each do |subject| %>
    <tr>
        <td> <%= subject.position %> </td>
        <td> <%= subject.name %> </td>
        <td> <%= subject.visible ? 'Yes' : 'No' %> </td>
        <td> <%= subject.pages.size%> </td>
        <td> 
            <%= link_to("Show", subject_path(subject), :class => 'action show') %> 
            <%= link_to("Edit", edit_subject_path(subject), :class => 'action edit') %> 
            <%= link_to("Delete", delete_subject_path(subject), :class => 'action delete') %> 

        </td>
    </tr> 
    <% end %>
</table>
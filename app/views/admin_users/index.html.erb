<% @page_title = "All Admin Users" %>

<div>
    
    <h4>
        <%= link_to("<< Back to Menu", admin_path, :class => 'back-link') %>
    </h4>
    <%= image_tag('plus2.png', size: '15x15', alt: '+') %>

    <span style="font-size: 20px">
        <%= link_to( "Add new admin", new_admin_user_path, class: 'action new') %>
    </span>
    <table>
        <tr>
            <th>Username</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        <% @admin_users.each do |admin_user| %>
        <tr>
            <td> <%= admin_user.username %></td>
            <td> <%= admin_user.name %></td>
            <td> <%= mail_to(admin_user.email) %></td>
            <td>
                <%= link_to "Edit", edit_admin_user_path(admin_user) %> 
                <%= link_to "Delete", delete_admin_user_path(admin_user) %> 
            </td>
        </tr>
        <% end %>
    </table>
</div>


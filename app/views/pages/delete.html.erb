<div>
    <%= link_to("<< Back to list", pages_path, :class => 'back-link') %>

    <h2>Delete Page</h2>
    <%= form_for(@page, url: page_path(@page, subject_id: @subject.id), method: :delete) do |f| %>
        
        <p>Are you sure you want to permanently delete the Page named <b><%= f.object.name %></b>?</p>
        
        <%= f.submit("Delete Page", style: "background-color: red; color: white;") %>

    <% end %>
    
</div>
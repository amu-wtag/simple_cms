<div>
    <%= link_to("<< Back to list", sections_path(page_id: @page.id), :class => 'back-link') %>

    <table>
        <tr>
            <th> Name </th>
            <td> <%= @section.name %> </td>
        </tr>
        <tr>
            <th> Position </th>
            <td> <%= @section.position %> </td>
        </tr>
        <tr>
            <th> Visible </th>
            <td> <%= @section.visible ? 'true' : 'false' %> </td>
        </tr>
        <tr>
            <th> Content Type</th>
            <td> <%= @section.content_type %></td>
        </tr>
        <tr>
            <th> Content</th>
            <td  style="width: 400px"> 
                <%= simple_format(word_wrap(@section.content, line_width: 50)) %>
            </td>
            <!--  
            <td  style="width: 300px"> 
                <%= simple_format(truncate(@section.content, length: 21)) %>
            </td>
            -->
        
        </tr>
        <tr>
            <th> Created </th>
            <td> <%= @section.created_at %> </td>
        </tr>
        <tr>
            <th> Updated </th>
            <td> <%= @section.updated_at %> </td>
        </tr>
        
    </table>
</div>
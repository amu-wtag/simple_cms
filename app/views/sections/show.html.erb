<% if !flash[:notice].blank? %>
    <div class="notice">
        <%= flash[:notice] %>
    </div>
<% end %>

<%= link_to("<< Back to list", sections_path, :class => 'back-link') %>

<table>
    <tr>
        <th> Name </th>
        <td> <%= @section.name %> </td>
    </tr>
    <tr>
        <th> Position </th>
        <td> <%= @section.position %> </td>
    </tr>
    <tr>
        <th> Visible </th>
        <td> <%= @section.visible ? 'true' : 'false' %> </td>
    </tr>
    <tr>
        <th> Created </th>
        <td> <%= @section.created_at %> </td>
    </tr>
    <tr>
        <th> Updated </th>
        <td> <%= @section.updated_at %> </td>
    </tr>
</table>